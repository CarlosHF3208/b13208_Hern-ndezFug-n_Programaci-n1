package domino2;







public class Ficha {
    
    
    static int ficha[] = new int[2];
    
    



public static void SetFicha(int d[])

{
ficha=d;


}

public int[] Ficha()
{
return ficha;
}
  
public static int[] FichaVuelta(int recibido[])
{
 int vuelta[]=new int [2];
 vuelta[0]=recibido[1];
  vuelta[1]=recibido[0];
    
return vuelta;
}    
    //cambiar a vector
public static void ImprimirFicha(int d[][])

{
System.out.println("|"+d[0][0]+"|"+d[0][1]+"|");


}    
    
    
    
    
    
    
    
    
    
}
